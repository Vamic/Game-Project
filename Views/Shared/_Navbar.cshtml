                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Ajax.ActionLink("Application name", "Index", htmlAttributes: new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    @Ajax.ActionLink("Home", "Index")
                </li>
                <li>
                    @Ajax.ActionLink("Gladiators", "Index", "Gladiators")
                </li>
                <li>
                    @Ajax.ActionLink("Combat", "Index", "Combat")
                </li>
